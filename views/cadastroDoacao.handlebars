<div class="container" id="cadastrarDoacao" >
<h1>Cadastrar um pedido de Doação</h1>
</div>

<form class="container" action="cadDoacao" method="POST">
  
    <div class="form-group">
    <label for="exampleFormControlSelect1">Categoria Doação</label>
    <select class="form-control" name="categoria" id="exampleFormControlSelect1">
      
      <option selected></option>
      <option>Alimentos</option>
      <option>Dinheiro</option>
      <option>Roupas</option>
      <option>Brinquedos</option>
    </select>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Descrição da Doação</label>
    <textarea class="form-control" name="descricao" id="exampleFormControlTextarea1"  rows="8"></textarea>
  </div>

<br>

<h1 id="tamanhoDaFonte">Nivel de Prioridade</h1>

  <div class="form-check form-check-inline container">
    <input class="form-check-input" type="radio" name="nivel" id="inlineRadio1" value="baixo">
    <label class="form-check-label" for="inlineRadio1">Baixo</label>
  </div>

  <div class="form-check form-check-inline container">
    <input class="form-check-input" type="radio" name="nivel" id="inlineRadio2" value="medio">
    <label class="form-check-label" for="inlineRadio2">Médio</label>
  </div>

  <div class="form-check form-check-inline container">
    <input class="form-check-input" type="radio" name="nivel" id="inlineRadio2" value="alto">
    <label class="form-check-label" for="inlineRadio2">Alto</label>
  </div>

<br>
<br>
<br>
<button id="botaoCadastrar" type="submit" class="btn btn-dark">Cadastrar</button>
  
</form>

<br>
<br>





<table class="table">
    <tr>
        <th>Categoria</th>
        <th>Descrição</th>
        <th>Nivel de Prioridade</th>
        
    </tr>
    {{#each doacao}}
        <tr>
            <td>{{categoria}}</td>
            <td>{{descricao}}</td>
            <td>{{nivel}}</td>
            <td><a href="/update/{{id}}">Modificar</a></td>  
            <td><a href="/delete/{{id}}">Apagar</a></td>
        </tr>
    {{/each}}
</table>




